<h1>Créer un nouveau potin</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group"> 
    <%= f.label :title, "Titre" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Contenu" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Créer le potin", class: "btn btn-primary" %> 
  </div>
<% end %>

<% if @gossip.errors.any? %>
  <div class="alert alert-danger">
    <h2>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</h2>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
